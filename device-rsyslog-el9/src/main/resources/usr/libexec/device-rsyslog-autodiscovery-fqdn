#!/bin/bash
  
#
# RSyslog Autodiscovery - FQDN
# ============================
#
# This script tells rsyslog to log the fully qualified domain name.

set -e

exec 2> >(logger -t ${0})

#
# Set FQDN

cat >> fqdn.conf <<- EOF
# Generated by $0 on `date`
# DO NOT MODIFY THIS FILE - it will be overwritten on server restart.
#

global(preserveFQDN="on")

EOF

install -o root -g root -m 644 fqdn.conf /etc/rsyslog.d/10-fqdn.conf


